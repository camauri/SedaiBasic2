10 REM *** WINDOW/RWINDOW/POS TEST PROGRAM ***
20 REM
30 SCNCLR
40 PRINT "WINDOW/RWINDOW/POS TEST"
50 PRINT "========================"
60 PRINT
70 REM
80 REM *** SAVE INITIAL SCREEN SIZE ***
90 MAXCOLS = RWINDOW(1) - 1
100 MAXROWS = RWINDOW(0) - 1
110 REM
120 REM *** TEST RWINDOW BEFORE SETTING WINDOW ***
130 PRINT "INITIAL SCREEN VALUES:"
140 PRINT "RWINDOW(0) LINES   = ";RWINDOW(0)
150 PRINT "RWINDOW(1) COLUMNS = ";RWINDOW(1)
160 PRINT "RWINDOW(2) WIDTH   = ";RWINDOW(2)
170 PRINT "MAXCOLS=";MAXCOLS;" MAXROWS=";MAXROWS
180 PRINT
190 REM
200 REM *** TEST POS FUNCTION ***
210 PRINT "TESTING POS FUNCTION:"
220 PRINT "CURSOR AT COL ";POS(0)
230 PRINT "          ";
240 PRINT "NOW AT COL ";POS(0)
250 PRINT
260 REM
270 REM *** WAIT FOR KEYPRESS ***
280 PRINT "PRESS ANY KEY TO TEST WINDOW..."
290 GETKEY A$
300 REM
310 REM *** SET A WINDOW WITHOUT CLEAR ***
320 SCNCLR
330 PRINT "SETTING WINDOW 5,5,35,15 (NO CLEAR)"
340 WINDOW 5,5,35,15,0
350 REM
360 REM *** CHECK WINDOW SIZE ***
370 PRINT "INSIDE WINDOW:"
380 PRINT "LINES   = ";RWINDOW(0)
390 PRINT "COLUMNS = ";RWINDOW(1)
400 PRINT "WIDTH   = ";RWINDOW(2)
410 PRINT
420 PRINT "POS = ";POS(0)
430 REM
440 REM *** FILL WINDOW WITH TEXT ***
450 PRINT "FILLING WINDOW..."
460 FOR I=1 TO 5
470 PRINT "LINE ";I;" IN WINDOW"
480 NEXT I
490 REM
500 REM *** WAIT FOR KEYPRESS ***
510 PRINT "PRESS KEY FOR CLEAR TEST"
520 GETKEY A$
530 REM
540 REM *** TEST WINDOW WITH CLEAR FLAG ***
550 WINDOW 10,8,30,12,1
560 PRINT "CLEARED WINDOW!"
570 PRINT "LINES=";RWINDOW(0)
580 PRINT "COLS=";RWINDOW(1)
590 REM
600 REM *** WAIT AND RESET ***
610 PRINT "PRESS KEY TO RESET"
620 GETKEY A$
630 REM
635 PRINT "DEBUG: MAXCOLS=";MAXCOLS;" MAXROWS=";MAXROWS
640 REM *** RESET TO FULL SCREEN USING SAVED VALUES ***
650 WINDOW 0,0,MAXCOLS,MAXROWS,1
660 PRINT "BACK TO FULL SCREEN"
670 PRINT "LINES=";RWINDOW(0);" COLS=";RWINDOW(1)
680 PRINT
690 PRINT "TEST COMPLETE!"
700 END
