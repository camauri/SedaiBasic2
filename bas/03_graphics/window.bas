10 REM === WINDOW / RWINDOW VISUAL DEMO ===
20 REM
100 MC = RWINDOW(1) - 1
110 MR = RWINDOW(0) - 1
120 REM
200 REM ======== INTRODUCTION ========
210 SCNCLR
220 PRINT "=== WINDOW COMMAND DEMO ==="
230 PRINT
240 PRINT "This demo shows how the WINDOW command"
250 PRINT "confines all text output to a rectangular"
260 PRINT "area of the screen."
270 PRINT
280 PRINT "What you will see:"
290 PRINT "  1. Screen filled with # pattern"
300 PRINT "  2. BLUE window with scrolling text"
310 PRINT "  3. PURPLE window overlapping it"
320 PRINT "  4. Fast scroll in GREEN window"
330 PRINT "  5. Full screen restored"
340 PRINT
350 PRINT "Each window prints full-width lines that"
360 PRINT "scroll inside the window, making the"
370 PRINT "boundaries clearly visible."
380 PRINT
390 PRINT "Press any key to start..."
395 GETKEY K$
400 REM
500 REM ======== FILL SCREEN WITH # PATTERN ========
510 COLOR 0, 1 : COLOR 1, 13 : SCNCLR
520 FOR R = 0 TO MR
530 FOR C = 0 TO MC
540 PRINT "#";
550 NEXT C
560 NEXT R
570 CHAR 0, 1, 0, " BACKGROUND: FULL SCREEN OF # "
580 CHAR 0, 1, 1, " PRESS KEY TO OPEN WINDOW 1...  "
590 GETKEY K$
600 REM
700 REM ======== WINDOW 1: BLUE ========
710 WINDOW 3, 4, 36, 18, 1
720 COLOR 0, 7 : COLOR 1, 2 : SCNCLR
730 WC = RWINDOW(1) : WR = RWINDOW(0)
740 P$ = "" : FOR I = 1 TO WC : P$ = P$ + "=" : NEXT I
750 FOR I = 1 TO WR + 5
760 L$ = " LINE " + STR$(I) + " "
770 PRINT LEFT$(L$ + P$, WC);
780 SLEEP 0.1
790 NEXT I
800 CHAR 0, 1, WR - 2, " PRESS KEY FOR WINDOW 2...  "
810 GETKEY K$
820 REM
900 REM ======== WINDOW 2: PURPLE, OVERLAPPING ========
910 WINDOW 20, 8, 60, 22, 1
920 COLOR 0, 5 : COLOR 1, 2 : SCNCLR
930 WC = RWINDOW(1) : WR = RWINDOW(0)
940 P$ = "" : FOR I = 1 TO WC : P$ = P$ + "~" : NEXT I
950 FOR I = 1 TO WR + 5
960 L$ = " ROW " + STR$(I) + " "
970 PRINT LEFT$(L$ + P$, WC);
980 SLEEP 0.1
990 NEXT I
1000 CHAR 0, 1, WR - 2, " PRESS KEY FOR SCROLL TEST...   "
1010 GETKEY K$
1020 REM
1100 REM ======== WINDOW 3: GREEN, FAST SCROLL ========
1110 WINDOW 5, 3, 45, 14, 1
1120 COLOR 0, 6 : COLOR 1, 2 : SCNCLR
1130 WC = RWINDOW(1) : WR = RWINDOW(0)
1140 PRINT "SCROLL TEST: 20 LINES IN";WR;"ROW WINDOW"
1150 PRINT "WATCH THE TEXT SCROLL!"
1160 PRINT
1170 SLEEP 2
1180 P$ = "" : FOR J = 1 TO WC : P$ = P$ + "-" : NEXT J
1190 FOR I = 1 TO 20
1200 L$ = " SCROLL " + STR$(I) + " "
1210 PRINT LEFT$(L$ + P$, WC);
1220 SLEEP 0.1
1230 NEXT I
1240 CHAR 0, 1, WR - 2, " DONE! PRESS KEY TO RESET...    "
1250 GETKEY K$
1260 REM
1300 REM ======== RESET TO DEFAULTS ========
1310 WINDOW 0, 0, MC, MR, 1
1320 COLOR 0, 12 : COLOR 1, 14 : SCNCLR
1330 COLOR 4, 14 : COLOR 5, 14 : COLOR 6, 12
1340 PRINT "BACK TO FULL SCREEN!"
1350 PRINT
1360 PRINT "RWINDOW(0) LINES   ="; RWINDOW(0)
1370 PRINT "RWINDOW(1) COLUMNS ="; RWINDOW(1)
1380 PRINT
1390 PRINT "ALL WINDOW TESTS COMPLETE."
1400 END
